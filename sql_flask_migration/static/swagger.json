  "components": {
    "schemas": {
      "Device": {
        "type": "object",
        "required": [
          "platform",
          "user_id"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "example": 21
          },
          "platform": {
            "type": "string",
            "example": "IOS"
          },
          "user_id": {
            "type": "integer",
            "example": 42
          },
          "entered_at": {
            "type": "string",
            "format": "2022-07-01T14:00:00.000Z"
          }
        }
      },
      "Devices": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Device"
        }
      },
      "Error": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "integer",
            "example": 404
          },
          "message": {
            "type": "string",
            "example": "NotFound"
          }
        }
      }
    }
